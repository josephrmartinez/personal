---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>
  <div>
    <div class="text-xl w-full mb-5 px-4 text-neutral-800">Joseph Martinez</div>
  </div>
  <div class="py-2 px-4">
    <text class="text-md text-neutral-800">
      Software developer with experience building full-stack web applications
      and rapid prototypes. <br /><br />
      React | Tailwind | CSS | Figma | Astro | Vite | Node.js | PostgreSQL | MongoDB
      | Python
    </text>
  </div>
  <div class="my-8">
    <div
      class="btn btn-outline ml-4 text-neutral-800 font-medium"
      id="emailbtn"
    >
      grab my email address
    </div>
  </div>

  <div class="text-xl w-full text-neutral-800 font-semibold px-4 my-2">
    Recent Projects
  </div>

  <ProjectCard
    title="Jump to Recipe"
    desc="AI-powered recipe app with Trello integration."
    github="https://github.com/josephrmartinez/skiptorecipe"
    blogPost="https://josephm.dev/blog/20230517/"
    videoLink="https://youtube.com/shorts/HcPU1TVjiXc"
  />
  <div class="my-2"></div>
  <ProjectCard
    title="self-empathy app"
    desc="Guides users through a self-empathy process."
    url="https://www.selfempathy.app/"
    github="https://github.com/josephrmartinez/selfempathyapp"
    blogPost="https://josephm.dev/blog/20230323/"
    videoLink="https://www.youtube.com/watch?v=BwpbelruGX8"
  />
  <div class="my-2"></div>
  <ProjectCard
    title="habitual reactions journal"
    desc="Learn about and log conversation 'defaults.'"
    url="https://josephrmartinez.github.io/reactionsjournal/"
    github="https://github.com/josephrmartinez/reactionsjournal"
    blogPost="https://josephm.dev/blog/20230402/"
  />
  <a href="/projects" class="btn btn-outline my-5 ml-4 text-gray-600">
    All Projects{" "}
    <svg
      class="h-6 w-6 fill-current md:h-8 md:w-8"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
    >
      {" "}
      <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"
      ></path>
    </svg>
  </a>

  <div>
    <div class="text-xl w-full text-neutral-800 font-semibold mb-5 px-4 mt-10">
      Recent Blog Posts
    </div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
        />
      </>
    ))
  }
</BaseLayout>

<script>
  const emailbutton = document.getElementById("emailbtn");

  emailbutton.addEventListener("click", copyEmailAddress);

  function copyEmailAddress() {
    navigator.clipboard.writeText("joseph.r.martinez@gmail.com");
    emailbutton.textContent = "email address copied";
  }
</script>
