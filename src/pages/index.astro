---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>
  <div>
    <div class="text-xl w-full mb-5 px-4 text-neutral-800">Joseph Martinez</div>
  </div>
  <div class="py-2 px-4">
    <text class="text-md text-neutral-800">
      Software developer with experience building full-stack web applications
      and rapid prototypes. <br /><br />
      React | Tailwind | CSS | Figma | Astro | Vite | Next.js | Node.js | PostgreSQL
      | SQLite | Python
    </text>
  </div>
  <div class="my-8">
    <div
      class="btn btn-outline ml-5 text-neutral-800 font-medium"
      id="emailbtn"
    >
      grab my email address
    </div>
  </div>

  <div class="text-xl w-full text-neutral-800 font-semibold px-4 my-2">
    Recent Projects
  </div>

  <div class="divider my-0"></div>
  <ProjectCard
    title="nineideas"
    desc="Generate ideas every day."
    url="https://www.nineideas.net/"
    github="https://github.com/josephrmartinez/nineideas"
    blogPost="https://josephm.dev/blog/20230415/"
  />
  <div class="divider my-0"></div>
  <ProjectCard
    title="EmpathyAI"
    desc="Self-empathy app with AI integrations."
    url="https://exquisite-elf-d2dceb.netlify.app"
    github="https://github.com/josephrmartinez/empathyAI"
    blogPost="https://josephm.dev/blog/20230330/"
  />
  <div class="divider my-0"></div>
  <ProjectCard
    title="habitual reactions journal"
    desc="Learn about and log conversation 'defaults.'"
    url="https://josephrmartinez.github.io/reactionsjournal/"
    github="https://github.com/josephrmartinez/reactionsjournal"
    blogPost="https://josephm.dev/blog/20230402/"
  />

  <div>
    <div class="text-xl w-full text-neutral-800 font-semibold mb-5 px-4 mt-10">
      Recent Blog Posts
    </div>
  </div>
  <div class="divider my-0"></div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
        />
      </>
    ))
  }
</BaseLayout>

<script>
  const emailbutton = document.getElementById("emailbtn");
  const textToCopy = "joseph.r.martinez@gmail.com";

  emailbutton.addEventListener("click", copyEmailAddress);

  function copyEmailAddress() {
    navigator.clipboard.writeText("joseph.r.martinez@gmail.com");
    emailbutton.textContent = "email address copied";
  }
</script>
